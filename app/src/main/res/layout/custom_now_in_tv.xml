<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="54dp"
        android:id="@+id/channelIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView_program"
        android:layout_alignTop="@+id/channelIcon"
        android:layout_toEndOf="@+id/channelIcon"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView_programTime"
        android:textSize="12dp"
        android:layout_below="@+id/textView_program"
        android:layout_alignStart="@+id/textView_program"
        android:textColor="#515151" />

</RelativeLayout>